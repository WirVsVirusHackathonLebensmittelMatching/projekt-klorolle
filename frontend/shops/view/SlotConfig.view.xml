<mvc:View controllerName="com.wir.vs.virus.timeslots.ShopOwner.controller.SlotConfig" xmlns:mvc="sap.ui.core.mvc"
		  displayBlock="true"
		  xmlns="sap.m">
	<Page id="page" title="{i18n>slotSettings}" showNavButton="true" navButtonPress="onNavBack">
		<content>
            <Title text="{i18n>shoppingTimes}" class="sapUiSmallMarginTop sapUiSmallMarginBegin" />
			<InputListItem label="{i18n>from}">
			<TimePicker
					id="shoppingTimeFrom"
					value="{shop>/timeslots/timeFrom}"
					valueFormat="HH:mm"
					displayFormat="HH:mm" />
			</InputListItem>
			<InputListItem label="{i18n>to}">
				<TimePicker
						id="shoppingTimeTo"
						value="{shop>/timeslots/timeTo}"
						valueFormat="HH:mm"
						displayFormat="HH:mm" />
			</InputListItem>
			<Title text="{i18n>slotDetails}" class="sapUiSmallMarginTop sapUiSmallMarginBegin" />
			<InputListItem label="{i18n>slotDuration}">
				<Input
						id="slotDuration"
						value="{shop>/timeslots/slotDuration}"
						type="Number" />
			</InputListItem>
			<InputListItem label="{i18n>parallelSlots}">
				<Input
						id="parallelSlots"
						value="{shop>/timeslots/parallelSlots}"
						type="Number" />
			</InputListItem>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Emphasized" text="{i18n>confirmButton}" press="onConfirmSlotConfig" />
				<Button text="{i18n>cancelButton}" press="onNavBack" />
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>