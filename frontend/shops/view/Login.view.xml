<mvc:View controllerName="com.wir.vs.virus.timeslots.ShopOwner.controller.Login" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m">
		<Page id="page" title="{i18n>loginTitle}">
			<content>
				<VBox alignItems="Center" justifyContent="SpaceAround" height="100%">
					<Image src="media/klopa_transparent.png" decorative="true" height="300px"/>

					<VBox id="loginGroup" alignItems="Center">
						<Label labelFor="shopName" text="{i18n>loginShopName}" />
						<Input id="shopName" />

						<!--Label labelFor="password" text="{i18n>password}" />
						<Input id="password" value="{view>/login/password}" type="Password" valueState="{view>/login/state}" /-->

						<Button id="login" text="{i18n>login}" press="onLogin" type="Emphasized" />
						<MessageStrip
								id="loginFailedMessage"
								text="{i18n>loginFailed}"
								type="Error"
								visible="false"
								showIcon="true">
						</MessageStrip>
						<Button id="register" text="{i18n>register}" press="onRegister" class="sapUiLargeMarginTop" />
					</VBox>
				</VBox>
			</content>
		</Page>
</mvc:View>